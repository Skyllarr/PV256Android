<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="cz.muni.fi.pv256.movio2.uco374585.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="cz.muni.fi.pv256.movio2.uco374585.MainActivity">

            <TextView
                android:id="@+id/category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/category1"
                android:textColor="#757575"
                android:textSize="22dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_movies_category1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/category2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/category2"
                android:textColor="#757575"
                android:textSize="22dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_movies_category2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/category3"
                android:textColor="#757575"
                android:textSize="22dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_movies_category3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scrollbars="vertical" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>